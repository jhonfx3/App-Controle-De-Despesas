    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lista_de_despesas_activity_listViewDespesas"
        >

    </ListView>

    <TextView
        android:id="@+id/lista_de_despesas_activity_textView_total_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Total das despesas"></TextView>
    <TextView
        android:id="@+id/lista_de_despesas_activity_textView_totalCalc"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="100dp"
